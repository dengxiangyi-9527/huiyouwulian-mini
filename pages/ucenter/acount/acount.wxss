page {
  background: #f4f4f4;
  min-height: 100%;
}

.container {
  background: #f4f4f4;
  min-height: 100%;
  width: 100%;
  height: auto;
  overflow: hidden;
}

.no-collect {
  width: 100%;
  height: auto;
  margin: 0 auto;
}

.no-collect .c {
  width: 100%;
  height: auto;
  margin-top: 200rpx;
}

.no-collect .c image {
  margin: 0 auto;
  display: block;
  text-align: center;
  width: 258rpx;
  height: 258rpx;
}

.no-collect .c text {
  margin: 0 auto;
  display: block;
  width: 258rpx;
  height: 29rpx;
  line-height: 29rpx;
  text-align: center;
  font-size: 29rpx;
  color: #999;
}
.queryBox{
  margin: 20rpx;
  height: 50rpx;
  overflow: hiden;
  position: relative;
}
.statusList{
width: 100%;
z-index: 999;
background-color: #fff;
height: auto;
position: absolute;
top: 60rpx;
}
.typeList{
  width: 100%;
z-index: 999;
background-color: #fff;
height: auto;
padding-left: 43%;
position: absolute;
top: 60rpx;
}
.status_item{
  padding: 9rpx 0;
  /* border-bottom: 1rpx solid #d15742; */
color: #d15842bd;

}
.collect-list {
  width: 100%;
  height: auto;
  overflow: hidden;
  background: #fff;
  padding-left: 30rpx;
  /* border-top: 1px solid #e1e1e1; */
}
.selc_area{
  width: 42%;
  float: left;
  height: 50rpx;
  line-height: 50rpx;
}
.type_area{
  width: 42%;
  float: left;
}
.btn{
  padding: 3rpx 20rpx;
  float: left;
  color: #d15742;
  /* border: 1rpx solid #d15742; */
  border: 1rpx solid #d15742;
  border-radius: 50rpx;
}
.sel_img{
  width: 30rpx;
  height: 30rpx;
  margin-left: 30rpx;
}
.item {
  height: 312rpx;
  width: 720rpx;
  background: #fff;
  padding: 80rpx 30rpx 30rpx 50rpx;
  border-top: 1px solid #e1e1e18f;
  position: relative;

}
.pic1{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right: 30rpx;
  top: 40%;
}
.item:last-child {
  border-bottom: 1px solid #fff;
}
.text{
  display: inline-table;
  width: 100rpx;
}
.item .img {
  float: left;
  width: 150rpx;
  height: 150rpx;
}

.item .info {
  float: right;
  width: 690rpx;
  height: 150rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding-left: 20rpx;
}

.item .info .name {
  font-size: 28rpx;
  color: #333;
  line-height: 40rpx;
}

.item .info .subtitle {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #888;
  line-height: 40rpx;
}

.item .info .price {
  margin-top: 8rpx;
  font-size: 28rpx;
  color: #333;
  line-height: 40rpx;
}

.c .isReal{
  color: #d15742!important;
  margin-top: 20rpx!important;
  text-decoration: underline;
}