.stepper {  
    /* width:270rpx;   */
    height: 50rpx;  
    /*给主容器设一个边框*/  
    border: 1rpx solid #818284;  
    border-radius: 9rpx; 
    background: white;
    margin-left: 20rpx;
}  
  
/*加号和减号*/  
.stepper .sign {  
    width:50rpx;  
    line-height: 40rpx;  
    text-align: center;  
    float: left;  
}  
  
/*数值*/  
.stepper .number {  
    width: 100rpx;  
    height: 49rpx; 
    min-height: 49rpx ;
    float: left;  
     margin: 0 auto;   
    text-align: center;  
    font-size: 32rpx;  
    color: #f66;
    /*给中间的input设置左右边框即可*/  
    border-left: 1rpx solid #818284;  
    border-right: 1rpx solid #818284;  
}  
  
/*普通样式*/  
.stepper .normal{  
    color: black;  
}  
/*禁用样式*/  
.stepper .disabled{  
    color: #ccc;  
} 
